          </ul>
        </div><!-- /.category -->
      </div><!-- /.inner -->
    </section><!-- /.products_category -->

    <div class="inner">
      {% if cart.attributes.pagination != blank %}
        {%- assign limit = cart.attributes.pagination %}
      {% else %}
        {% assign limit = 15 -%}
      {% endif %}
      {% paginate collection.products by limit %}

        <!-- 並び順 -->
        <div class="p-order-content">
          <p>全{{ paginate.items }}件</p>
          <ul>
            <li class="u-pc">並び順：</li>
            <li>
              <a href="{{ product.url }}?sort_by=best-selling" data-sort-by="best-selling">おすすめ順</a>
            </li>
            <li>
              <a href="{{ product.url }}?sort_by=created-descending" data-sort-by="created-descending">新着順</a>
            </li>
            <li>
              <a href="{{ product.url }}?sort_by=price-ascending" data-sort-by="price-ascending">価格が安い順</a>
            </li>
            <li>
              <a href="{{ product.url }}?sort_by=price-descending" data-sort-by="price-descending">価格が高い順</a>
            </li>
          </ul>
        </div>

        <div class="p-proucts_list">
          <ul>

            {% for product in collection.products %}
              <li>
                <a href="{{ product.url }}">
                  <div class="thumn-box obj-fit">
                    <img src="{{ product.featured_image.src | img_url: 'master' }}" alt="{{ product.title }}">
                  </div>
                  <div class="cate">
                    {% assign collection_titles = '' %}
                    {% for collection in product.collections %}
                      {% unless collection.handle == 'reducedtax' %}
                        {% if collection_titles != '' %}
                          {% assign collection_titles = collection_titles | append: ' / ' %}
                        {% endif %}
                        {% assign collection_titles = collection_titles | append: collection.title %}
                      {% endunless %}
                    {% endfor %}
                    {% if collection_titles != '' %}
                      <p>{{ collection_titles }}</p>
                    {% endif %}
                  </div>
                  <div class="item-name">
                    <p>{{ product.title }}</p>
                  </div>
                  <div class="price">
                    <p>{{ product.price | money_with_currency }}<span>（税込）</span></p>
                  </div>
                </a>
              </li>
            {% endfor %}

          </ul>
        </div>
        {% if paginate.pages > 1 %}
          {% render "pagination", paginate: paginate %}
        {% endif %}
      {% endpaginate %}
    </div><!-- /.inner -->
  </section>
</div>



{% schema %}
  {
    "name": "products",
    "presets": [
      {
        "name": "products"
      }
    ]
  }
{% endschema %}